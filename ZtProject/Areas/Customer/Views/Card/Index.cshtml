@model List<Card>

 <partial name="_Notification" />

 <div class="card shadow border-0 mt-4">
     <div class="card-header bg-primary bg-gradient ml-0 py-3">
         <div class="row">
           
             <div class="col-12 text-center">

                <h2 class="text-primary bg-white border-black shadow py-2"><i class="bi bi-card-list "></i> Card List </h2>

             </div>
         </div>
         <div class="card-body p-0">
            <div class="row pt-2 pb-3">
                <div class="col-6 ">
                  
                </div>

                <div class="col-6 text-end">
                    <a asp-controller="Card" asp-action="Create" class="btn shadow btn-light text-primary">
                        Request for a New Card <i class="bi bi-plus-square"></i>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-striped ">

            <thead>


                <tr>
                    <th>
                        Card Name
                    </th>
                    <th>
                        Card Number
                    </th>
                  
                    <th>
                        Limit
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {


                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.number
                        </td>
                        <td>
                            @obj.limit
                        </td>
                      
                        <td>
                            <div class="w-75  btn-group" role="group">
                                <a asp-controller="Card" asp-action="Edit" asp-route-id="@obj.Id" class="btn shadow btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit Card Name
                                </a>

                            </div>
                            <div class="w-75  btn-group" role="group">
                                <a asp-controller="CardHistory" asp-action="Index" asp-route-id="@obj.Id" class="btn shadow btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Details
                                </a>

                            </div>

                        </td>

                    </tr>
                }
            </tbody>


        </table>
         </div>
     </div>


<div class="container"></div>
     
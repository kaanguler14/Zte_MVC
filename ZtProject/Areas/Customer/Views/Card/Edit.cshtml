@model Card

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-white bg-gradient ml-0 py-3">
        <div class="row">
            <div class="shadow col-12 text-center">
                <h2 class="text-primary py-2 card shadow ">Edit Card</h2>
            </div>

        </div>
        <div class="card-body  p-4">
            <form method="post">
                
              
                <input asp-for="BankClientId" hidden />
                <input asp-for="Id" hidden />
                <input asp-for="number" hidden />
                <input asp-for="limit" hidden />
                <input asp-for="number" hidden />
                
                
                <div class="border shadow border-black bg-primary p-3 mt-4">
                   
                    <div class="mb-3 row p-1 text-light">
                        <label asp-for="Name" class="p-0"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-dark"></span>
                    </div>




                    <div class="row mt-3">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-secondary form-control">Update</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Card" asp-action="Index" class="btn  btn-secondary form-control">
                                Back To List
                            </a>
                        </div>
                    </div>





                </div>
            </form>
        </div>
    </div>

</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />

    }

            }
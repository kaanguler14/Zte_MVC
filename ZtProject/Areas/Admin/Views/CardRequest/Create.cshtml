@model Card

<div class="card shadow border-0 mt-4">
    <div class="border border-primary card-header bg-white bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary py-2">Create Account</h2>
            </div>
        </div>

    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="BankClientId" hidden />
            <input asp-for="BankClient" hidden />
            <div class="border bg-primary p-3 mt-4" >

                <div class="mb-3 row p-1 text-light">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" text-dark></span>
                </div>

                <div class="mb-3 row p-1 text-light">
                    <label asp-for="limit" class="p-0"></label>
                    <input asp-for="limit" class="form-control" />
                    <span asp-validation-for="limit" text-dark></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input type="file" name="file" class="form-control" />
                    <label asp-for="ImageUrl" class="ms-2"> </label>


                </div>
              

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-secondary form-control">Create</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="CardRequest" asp-action="Index" class="btn  btn-secondary form-control">
                            Back To List
                        </a>
                    </div>
                </div>





            </div>
        </form>
    </div>

</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
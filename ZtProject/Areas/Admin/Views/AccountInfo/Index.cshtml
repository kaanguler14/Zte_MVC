@model List<Account>

 <partial name="_Notification" />

 <div class="card shadow border-0 mt-4">
     <div class="card-header bg-primary bg-gradient ml-0 py-3">
         <div class="row">
           
             <div class="col-12 text-center">

                <h2 class="text-primary bg-white border-black shadow py-2"><i class="bi bi-card-list "></i> Account List </h2>

             </div>
         </div>
         <div class="card-body p-0">
            <div class="row pt-2 pb-3">
                <div class="col-6 ">
                  
                </div>

                <div class="col-6 text-end">
                    <a asp-controller="AccountInfo" asp-action="Create" class="btn shadow btn-light text-primary">
                        Create New Account <i class="bi bi-plus-square"></i>
                    </a>
                </div>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped ">

            <thead>


                <tr>
                    <th>
                        Client Name
                    </th>
                    <th>
                        IBAN
                    </th>
                    <th>
                        Account Type
                    </th>
                    <th>
                        Account Balance
                    </th>
                    <th>
                        Account Status
                    </th>
                    <th>
                        Opening Date
                    </th>
                    <th>

                    </th>

                </tr>
            </thead>
       


        </table>
         </div>
     </div>
 </div>


 @section Scripts{
     <script src="~/js/accountInfo.js"></script>
 }


